@model IEnumerable<assignment.Models.Person>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>Info</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-controller="People" asp-action="info" asp-route-id="@item.Id"> info</a>  |  <a asp-controller="People" asp-action="Edit" asp-route-id="@item.Id">edit</a>|<a asp-controller="People" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
