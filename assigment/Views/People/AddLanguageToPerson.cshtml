@model assignment.Models.AddPersonLanguageViewModel

@{
    ViewData["Title"] = "AddLanguageToPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddLanguageToPerson</h1>

<h4>PersonLanguage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddLanguageToPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PersonId" />
            </div>
            <div class="form-group">

                @Html.LabelFor(x => Model.LanguageId, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-5">

                    @Html.DropDownListFor(x => Model.LanguageId, new SelectList(Model.Languages, "Id", "LanguageName"), htmlAttributes: new { @class = "form-control", id = "LanguageId" })

                    @Html.ValidationMessageFor(x => x.LanguageId, "", new { @class = "text-danger" })

                </div>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
